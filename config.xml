<?xml version='1.0' encoding='utf-8'?>
<widget id="org.bbqlab.leggimi" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">

    <name>Leggimi</name>

    <icon src="icon.png" />

    <description>
        Un gioco-lettura per aiutare i bambini con disturbi specifici di apprendimento
    </description>

    <author email="staff@bbqlab.net" href="http://bbqlab.net">
        BBQLAB Team
    </author>

    <content src="index.html" />

    <access origin="*" />
    <access origin="content:///*" />
    <access origin="cdvfile://*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="cdvfile://*" />
    <allow-intent href="market:*" />
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />

    <preference name="android-minSdkVersion" value="14" />
    <preference name="android-targetSdkVersion" value="19" />

    <preference name="xwalkVersion" value="18+" />
    <preference name="xwalkCommandLine" value="--disable-pull-to-refresh-effect" />
    <preference name="xwalkMode" value="embed" />
    <preference name="xwalkMultipleApk" value="true" />

    <plugin name="cordova-plugin-crosswalk-webview" spec="~1.7.2" />
    <engine name="android" spec="~5.1.1" />
</widget>
